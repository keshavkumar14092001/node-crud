<section>
    <div class="container d-flex justify-content-center">
        <div class="card mt-5 p-4">
            <div class="header-img">
                <div class="menu-icon">
                    <div class="dropdown">
                        <a href="#" class="dropbtn"><img src="/images/hamburgur.png" /></a>
                        <div class="dropdown-content">
                            <ul>
                                {{#if loggedIn}}
                                <li><a href="#" onclick="showAddNewMenu(); return false;">Add
                                        New Menu</a></li>
                                <li><a href="/logout">Logout</a></li>
                                {{else}}
                                <li><a href="/login">Login</a></li>
                                {{/if}}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="app-icon"><a href="/"><img src="/images/mainLogo.png" /></a></div>
            </div>

            {{#if loggedIn}}
            <div class="login-box">
                <div id="new-menu">
                    <h2 class="page-title">New Menu</h2>
                    <form action="/menu/new" method="POST" class="search-form" id="searchForm">
                        <div class="menu-name"><input type="text" name="menuName"
                                placeholder="Enter your Place (e.g. Domino's) !" required /></div>
                        <div class="menu-url"><input type="text" name="menuUrl" placeholder="Enter Menu URL [http] !"
                                required />
                        </div>
                        <div class="menu-btn"><button type="submit" class="btn btn-primary">Save</button></div>
                    </form>
                </div>
            </div>
            {{/if}}

            <form action="/q" method="POST" class="search-form" id="searchForm">
                <div class="input-group mb-3">
                    <input type="text" name="searchInput" class="form-control" value="{{search}}"
                        placeholder="Search for your menu!" />
                    <div class="input-group-append">
                        <button class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>


            {{! Iterating through each data, to display the each data }}
            {{#each data}}
            <div class="d-flex flex-row justify-content-between border mb-3 p-2">
                <div class="d-flex flex-row justify-content-between align-items-center">
                    {{this.name}}
                    {{#if ../loggedIn}}
                    <a href="/menu/edit/{{this._id}}" class="p-3">Edit</a>
                    <a href="/menu/delete/{{this._id}}" class="red">Delete</a>
                    {{/if}}
                </div>
                <div class="menu-code">
                    <a href="{{this.menuURL}}" target="_blank">View Menu</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>