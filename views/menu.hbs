<section class="container d-flex justify-content-center">
    <div class="card mt-5 p-4">
        <div class="login-box">
            <h2 class="page-title">{{title}}</h2>
            <form action="/menu/save" method="POST">
                <div class="menu-edit">
                    <div class="menu-name"><input type="text" name="menuName" value="{{item.name}}"></div>
                    <div class="menu-url"><input type="text" name="menuUrl" value="{{item.menuURL}}"></div>
                    <div class="menu-btn">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-primary"
                            onclick="javascript:location.href='/';">Cancel</button>
                        <input type="hidden" name="menuId" value="{{item._id}}">
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>